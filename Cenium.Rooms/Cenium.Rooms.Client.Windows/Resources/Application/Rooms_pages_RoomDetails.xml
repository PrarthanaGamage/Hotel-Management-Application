      <layout>
        
          <section id="griditem" readOnly="true">
            <items>
              <item id="RoomNo" label="Room Number" type="Column" width="1*" />
              <item id="RoomType" label="!rooms.room.roomtype" type="Column" width="1*" />
              <item id="RoomStatus" label="!rooms.room.roomstatus" type="Column" width="1*" />
              <item id="ReservedFrom" label="!rooms.room.reservedfrom" type="Column" width="1*" />
              <item id="ReservedTill" label="!rooms.room.reservedtill" type="Column" width="1*"/>
            </items>
          </section>

          <section id="listitem" readOnly="true">
            <items>
              <item id="RoomNo" type="TextBlock" labelVisibility="Collapsed">
                <properties>
                  <property id="TextStyle" value="TitleText" />
                </properties>
              </item>
              <item id="RoomType" type="TextBlock" labelVisibility="Collapsed">
                <properties>
                  <property id="TextStyle" value="SubtleText" />
                </properties>
              </item>
            </items>
          </section>
        
        <section id="summary">
          <items>
            <item id="general" labelVisibility="Collapsed" type="rooms.pane.room.details" />
          </items>
        </section>

        <section id="sidebar">
          <items>
            <item id="general" labelVisibility="Collapsed" type="roooms.pane.room.sidebar" />
          </items>
        </section>

